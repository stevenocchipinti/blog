---
import { Image } from "astro:assets";
import type { ImageMetadata } from 'astro';
import type { CollectionEntry } from "astro:content";

export interface Props {
  src: string
  alt?: string
  rowSpan?: number
  colSpan?: number
  aspectRatio?: number
  class?: string
  style?: string
}

const { src, alt, style, class: className, rowSpan = 1, colSpan = 1, aspectRatio = 0 } = Astro.props;

const glob = '/src/content/**/*.{jpeg,jpg,png,gif}'
const images = import.meta.glob<{ default: ImageMetadata }>( '/src/content/**/*.{jpeg,jpg,png,gif}');
if (!images[src]) throw new Error(`"${src}" does not exist in glob: "${glob}"`);

const gridArea = `span ${rowSpan} / span ${colSpan}`
---

<style>
  img {
    width: 100%;
    height: 100%;
    margin: 0;
    border-radius: 0.5rem;
    object-fit: cover;
  }
</style>

<Image class={className} style={{gridArea, aspectRatio}} src={images[src]()} alt={alt || "A blog photo"} />
