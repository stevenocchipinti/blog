---
import type { CollectionEntry } from "astro:content"
import { getImage } from "astro:assets"
import BaseHead from "../components/BaseHead.astro"
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
import FormattedDate from "../components/FormattedDate.astro"

import placeholder from "../assets/placeholder-trip.jpg"

type Props = CollectionEntry<"travel">["data"] & {
  nextPost?: string
  prevPost?: string
  trip: CollectionEntry<"trips">
}

const { title, description, pubDate, prevPost, nextPost, trip } = Astro.props

const coverBackground = await getImage({
  src: trip.data.cover || placeholder,
})
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 100%;
        max-width: 100%;
      }
      article {
        background-color: white;
        border-radius: 2rem;
        margin: -3.5rem auto 0 auto;
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 60ch;
        padding: 1em;
        color: rgb(var(--gray-dark));
        box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 50px;
      }
      .cover-container {
        max-width: 100%;
        overflow: clip;
      }
      .cover {
        display: grid;
        width: 100%;
        height: 50svh;
        background-size: cover;
        background-position: center;
        /* border-image: fill 0 linear-gradient(#0003, #000a); */
        border-radius: 0;
      }
      @supports (animation-timeline: view()) {
        @media (prefers-reduced-motion: no-preference) {
          .cover {
            animation: cover-fade linear forwards;
            animation-timeline: view();
            animation-range: exit -80px;
            transform-origin: bottom;
          }
        }
      }
      .cover h2 {
        color: white;
        margin: auto;
      }
      .title {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }
      .title h1 {
        margin: 0 0 0.5em 0;
      }
      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }
      .last-updated-on {
        font-style: italic;
      }
      .prev-next {
        display: flex;
        justify-content: space-between;
        width: 720px;
        max-width: 100%;
        margin: auto;
        padding: 1em;
        color: #555;
      }
      a {
        color: currentColor;
        text-decoration: none;
      }
      a:hover {
        text-decoration: underline;
      }

      @keyframes cover-fade {
        to {
          scale: 1.5;
          filter: blur(1px) brightness(0.01);
        }
      }
    </style>
  </head>

  <body>
    <Header />
    <div class="cover-container">
      <div
        class="cover"
        style={`background-image: url(${coverBackground.src});`}
      >
      </div>
    </div>
    <main>
      <article class="prose">
        <div class="title">
          <div class="date">
            <FormattedDate date={pubDate} />
          </div>
          <h1>{title}</h1>
          <hr />
          <div class="prev-next">
            <div>{prevPost && <a href={prevPost}>◁ Prev</a>}</div>
            <div>{nextPost && <a href={nextPost}>Next ▷</a>}</div>
          </div>
        </div>
        <slot />
        <div class="prev-next">
          <div>{prevPost && <a href={prevPost}>◁ Prev</a>}</div>
          <div>{nextPost && <a href={nextPost}>Next ▷</a>}</div>
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
