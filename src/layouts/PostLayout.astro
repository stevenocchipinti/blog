---
import type { CollectionEntry } from "astro:content"
import { getImage } from "astro:assets"
import BaseHead from "../components/BaseHead.astro"
import Footer from "../components/Footer.astro"
import FormattedDate from "../components/FormattedDate.astro"
import NextPrev from "../components/NextPrev.astro"

import placeholder from "../assets/placeholder-trip.jpg"
import Cover from "../components/Cover.astro"

type Props = CollectionEntry<"travel">["data"] & {
  nextPost?: string
  prevPost?: string
  trip: CollectionEntry<"trips">
}

const { title, subtitle, description, pubDate, prevPost, nextPost, trip } =
  Astro.props

const coverBackground = await getImage({
  src: trip.data.cover || placeholder,
})
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      main {
        width: 100%;
        max-width: 100%;
      }
      article {
        background-color: white;
        border-radius: 2rem;
        margin: -3.5rem auto 0 auto;
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 60ch;
        padding: 1em;
        color: rgb(var(--gray-dark));
        box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 50px;
      }

      .article-header {
        margin-bottom: 1em;
        padding: 1em 0;
        text-align: center;
        line-height: 1;
      }

      .date {
        margin-bottom: 0.5em;
        color: rgb(var(--gray));
      }

      .title {
        display: grid;
        gap: 0.5rem;
        margin: 1.5rem 0 2.5rem 0;
      }

      h2 {
        color: #555;
      }
    </style>
  </head>

  <body>
    <Cover
      background={coverBackground.src}
      heading={trip.data.title}
      backLink={`/travel/${trip.id}`}
    />

    <main>
      <article
        transition:animate="none"
        transition:name="article"
        class="prose"
      >
        <div class="article-header">
          <div class="date">
            <FormattedDate date={pubDate} />
          </div>
          <div class="title">
            <h1>{title}</h1>
            <h2>{subtitle}</h2>
          </div>
          <hr />
          <NextPrev prevPost={prevPost} nextPost={nextPost} />
        </div>

        <slot />

        <NextPrev prevPost={prevPost} nextPost={nextPost} />
      </article>
    </main>
    <Footer />
  </body>
</html>
